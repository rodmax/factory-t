{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "../build",
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "target": "es2018",
        "jsx": "react",
        "module": "commonjs",
        "allowJs": true,
        "lib": ["es2018", "dom"],
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "resolveJsonModule": true
    },
    "include": ["./**/*.ts", "./*.ts", ".*.js"],
    "exclude": ["node_modules", "./tests"]
}
